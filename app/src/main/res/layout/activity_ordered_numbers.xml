<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderedNumbers"
    android:background="@drawable/bg_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="250dp"
        android:layout_weight="1"
        android:background="#b4dc57"
        android:backgroundTint="#b4dc57"
        android:padding="30dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/bg_main"
                android:textColor="#AAF"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/bg_main"
                android:textColor="#AAF"
                android:textSize="50sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="203dp"
            android:layout_height="225dp"
            android:src="@drawable/class_nums_4"/>

        <ImageView
            android:id="@+id/textView2"
            android:layout_width="203dp"
            android:layout_height="225dp"
            android:layout_marginLeft="207dp"
            android:src="@drawable/class_nums_2" />

        <ImageView
            android:id="@+id/textView3"
            android:layout_width="203dp"
            android:layout_height="225dp"
            android:layout_marginTop="225dp"
            android:src="@drawable/class_nums_9" />

        <ImageView
            android:id="@+id/textView4"
            android:layout_width="203dp"
            android:layout_height="225dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="230dp"
            android:src="@drawable/class_nums_0" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="30dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="60dp"
        android:background="#b4dc57"
        android:backgroundTint="#b4dc57"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:src="@drawable/class_nums_9"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>

                <ImageView
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:src="@drawable/class_nums_0"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>

                <ImageView
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:src="@drawable/class_nums_2"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>

                <ImageView
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:src="@drawable/class_nums_4"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
                </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>